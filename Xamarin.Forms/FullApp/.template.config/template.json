{
  "$schema": "http://json.schemastore.org/template",
  "author": "Brian Lagunas",
  "classifications": [ "Prism", "Xamarin", "Xamarin.Forms" ],
  "name": "Prism Full App (Xamarin.Forms)",
  "identity": "Prism.Xamarin.Forms.Full.Core.CSharp", // Unique name for this template
  "groupIdentity": "Prism.Xamarin.Forms.Full.Core",
  "shortName": "xf-core-full", // Short name that can be used on the cli
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "FullApp",
  "preferNameDirectory": true,
  "guids": [
    "{60DD2A09-ADED-4441-90D5-A78473340367}",
    "{F0F9DAD2-E01F-4FB1-8702-3D1F9858CC28}",
    "{D17E8FE0-9E43-4165-8552-8C749D41F17C}",
    "{D58C2E58-4EC7-4396-86EC-16F63E242D91}",
    "{A6CB0382-2DFF-4AF4-B7F3-6F236750BB26}",
    "{EE6DBCE0-4C2E-4959-8A27-42E9E22A73A8}",
    "{CBE5EC98-F24A-45CB-A012-A29E08F49D35}",
    "{4ED6D7B9-81B0-4D0F-926A-E421C190B5A5}",
    "{6A24D2E6-5948-409D-B85B-E2D23F87B529}",
    "{DADEC3F3-23E6-4FE7-B174-F3ECE70C2FE2}",
    "{2927287B-446D-4CC3-8839-709887C17DA3}",
    "{9D5DE500-275E-402F-BACD-ED4CCEFC9CE9}"
  ],
  "symbols": {
    "AppId": {
      "type": "parameter",
      "dataType": "text",
      "replaces": "com.prismtemplate.name",
      "defaultValue": "com.companyname.appname",
      "description": "Sets the iOS Bundle Id and the Android package Id <com.company.appname>"
    },
    "Android": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the Android platform support project"
    },
    "iOS": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the iOS platform support project"
    },
    "UWP": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the Windows platform support project"
    },
    "Container": {
      "type": "parameter",
      "dataType": "choice",
      "defaultValue": "DryIoc",
      "choices": [
        {
          "choice": "DryIoc",
          "description": "Uses DryIoc as the Dependency Injection Container"
        },
        {
          "choice": "Unity",
          "description": "Uses Unity as the Dependency Injection Container"
        }
      ],
      "description": "The Dependency Injection Container to use"
    },
    "MinimumAndroidTarget": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "21",
      "choices": [
        {
          "choice": "17",
          "description": "Targets Android Jelly Bean 4.2.X"
        },
        {
          "choice": "18",
          "description": "Targets Android Jelly Bean 4.3"
        },
        {
          "choice": "19",
          "description": "Targets Android Kit Kat 4.4"
        },
        {
          "choice": "21",
          "description": "Targets Android Lollipop 5.0"
        },
        {
          "choice": "22",
          "description": "Targets Android Lollipop 5.1"
        },
        {
          "choice": "23",
          "description": "Targets Android Marshmallow 6.0"
        }
      ],
      "replaces": "ANDROID-MINIMUM-TARGET-SDK"
    },
    "DryIocContainer": {
      "type": "computed",
      "value": "(Container == \"DryIoc\")"
    },
    "UnityContainer": {
      "type": "computed",
      "value": "(Container == \"Unity\")"
    }
  },
  "primaryOutputs": [
    {
      "path": "FullApp\\FullApp.csproj"
    },
    {
      "condition": "Android",
      "path": "FullApp.Android\\FullApp.Android.csproj"
    },
    {
      "condition": "iOS",
      "path": "FullApp.iOS\\FullApp.iOS.csproj"
    },
    {
      "condition": "UWP",
      "path": "FullApp.UWP\\FullApp.UWP.csproj"
    },
    {
      "path": "FullApp.Core\\FullApp.Core.csproj"
    },
    {
      "path": "Modules\\FullApp.Modules.ModuleName\\FullApp.Modules.ModuleName.csproj"
    },
    {
      "path": "Services\\FullApp.Services\\FullApp.Services.csproj"
    },
    {
      "path": "Services\\FullApp.Services.Interfaces\\FullApp.Services.Interfaces.csproj"
    },
    {
      "path": "Tests\\FullApp.Modules.ModuleName.Tests\\FullApp.Modules.ModuleName.Tests.csproj"
    }
  ],
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!Android)",
          "exclude": [ "FullApp/FullApp.Android/**/*" ]
        },
        {
          "condition": "(!iOS)",
          "exclude": [ "FullApp/FullApp.iOS/**/*" ]
        },
        {
          "condition": "(!UWP)",
          "exclude": [ "FullApp/FullApp.UWP/**/*" ]
        }
      ]
    }
  ]
}